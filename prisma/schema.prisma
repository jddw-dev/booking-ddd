// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Auth domain

model Authentication {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  userId String @unique

  booker Booker @relation(fields: [bookerId], references: [id], onDelete: Cascade)
  bookerId String @unique
}

// Booker domain

model Booker {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email String @unique

  authentication Authentication?
  
  organizers Organizer[]
  contacts Contact[]
}

// Contacts domain

model Email {
  id String @id @default(uuid())
  value String

  contactInfos ContactInfos @relation(fields: [contactInfosId], references: [id], onDelete: Cascade)
  contactInfosId String
}

model Phone {
  id String @id @default(uuid())
  value String

  contactInfos ContactInfos @relation(fields: [contactInfosId], references: [id], onDelete: Cascade)
  contactInfosId String
}

model ContactInfos {
  id String @id @default(uuid())

  emails Email[] 
  phones Phone[]

  website String?
  
  street String?
  city String?
  zipCode String?
  country String?

  organizer Organizer?
  contact Contact?
}

enum OrganizerType {
  CITY_HALL
  TOURIST_OFFICE
  ASSOCIATION
  OTHER
}

model Organizer {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  booker Booker @relation(fields: [bookerId], references: [id], onDelete: Cascade)
  bookerId String

  contactInfos ContactInfos @relation(fields: [contactInfosId], references: [id], onDelete: Cascade)
  contactInfosId String @unique

  name String
  type OrganizerType @default(OTHER)

  contacts Contact[]
}

model Contact {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstName String?
  lastName String?

  contactInfos ContactInfos @relation(fields: [contactInfosId], references: [id], onDelete: Cascade)
  contactInfosId String @unique

  booker Booker @relation(fields: [bookerId], references: [id], onDelete: Cascade)
  bookerId String

  organizer Organizer? @relation(fields: [organizerId], references: [id], onDelete: Cascade)
  organizerId String?
}