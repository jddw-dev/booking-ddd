// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booker {
  id String @id @default(uuid())
  createdAt DateTime 
  updatedAt DateTime 
  email String @unique
  hashedPassword String
  contacts Contact[]
}

model Contact {
  id String @id @default(uuid())
  createdAt DateTime
  updatedAt DateTime
  name String
  email String
  phone String
  booker Booker @relation(fields: [bookerId], references: [id])
  bookerId String
}